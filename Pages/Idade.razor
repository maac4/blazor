    public void idade_()
    {
        idade = hoje.Year - data_nascimento.Year;

        if (hoje.Month < data_nascimento.Month || (hoje.Month == data_nascimento.Month && hoje.Day < data_nascimento.Day))
        {
            idade--;
        }

        mensagem = $"Sua idade Ã© {idade}.";
    }
}
