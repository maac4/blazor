<br>
<p><button class="btn btn-dark" @onclick="idade_">Cacular idade</button></p>

<p><b>@idade</b></p>

@code {

    DateTime hoje = DateTime.Now;

    DateTime data_nascimento = DateTime.Now;
    int idade = 0;

    // Variaveis para a conta

    // Ate aqui

    public void idade_()
    {
        idade = hoje.Year - data_nascimento.Year;

        if (hoje.Month < data_nascimento.Month || (hoje.Month == data_nascimento.Month && hoje.Day < data_nascimento.Day))
        {
            idade--;
        }

    }
}
